<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:elevation="0dp">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="parallax">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- Info Rating dan Point -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:clipToPadding="false">
                    <!-- Info Rating -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginEnd="25dp"
                        android:clipToPadding="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:background="@android:color/darker_gray"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Rating"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                tools:text="5"
                                android:textSize="20sp"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Info Point -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="25dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:background="@android:color/darker_gray"
                            android:padding="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Point"
                                android:textSize="20sp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                tools:text="5"
                                android:textSize="20sp"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!-- Info Driver -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:clipToPadding="false"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp">
                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/tv_lbl_edit_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile" />
                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/tv_lbl_nama_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Driver" />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@id/tv_lbl_nama_driver"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/tv_output_nama_driver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Sunarya Bulipsi Susanto" />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@id/tv_output_nama_driver"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/tv_lbl_nopol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No. Polisi" />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@id/tv_lbl_nopol"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/tv_output_nopol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="L 8789 PW"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="visible"
                    tools:visibility="gone">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Belum Ada Pesanan"/>
                </FrameLayout>
                <!-- Informasi Pesanan -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_marginHorizontal="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <!-- Lokasi Pengambilan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Pengambilan"/>
                        <TextView
                            android:id="@+id/tv_output_lokasi_pengambilan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Jl. Kali Jagal No. 101, Jakarta"
                            android:background="@drawable/bg_border_green_all_5_round_white"
                            android:drawableLeft="@android:drawable/btn_star"
                            android:drawableRight="@android:drawable/ic_menu_search" />
                        <!-- Lokasi Pengiriman -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Pengiriman"/>
                        <TextView
                            android:id="@+id/tv_output_lokasi_pengiriman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Jl. Soekarno No. 1, Surabaya"
                            android:background="@drawable/bg_border_green_all_5_round_white"
                            android:drawableLeft="@android:drawable/btn_star"
                            android:drawableRight="@android:drawable/ic_menu_search" />
                        <!-- Rute Tambahan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rute Tambahan"/>
                        <TextView
                            android:id="@+id/tv_output_rute_tambahan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Jl. Soekarno No. 1, Surabaya"
                            android:background="@drawable/bg_border_green_all_5_round_white"
                            android:drawableLeft="@android:drawable/btn_star"
                            android:drawableRight="@android:drawable/ic_menu_search" />
                        <!-- Tipe Pengiriman -->
                        <RadioGroup
                            android:id="@+id/rg_tipe_pengiriman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checkedButton="@id/rb_pengiriman_sekali"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rb_pengiriman_sekali"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dp"
                                android:text="1x Jalan"/>
                            <RadioButton
                                android:id="@+id/rb_pengiriman_pp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pulang Pergi"/>
                        </RadioGroup>
                        <!-- Berat Volume Barang dan Jumlah Truck -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="2">
                            <!-- Berat Volume Barang -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Berat atau Volume Barang"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">
                                    <TextView
                                        android:id="@+id/tv_output_berat_volume_barang"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:gravity="center_vertical"
                                        android:padding="5dp"
                                        android:text="7000"
                                        android:background="@drawable/bg_border_green_all_5_round_white"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"
                                        android:text="kg"/>
                                </LinearLayout>
                            </LinearLayout>
                            <!-- Jumlah Truck -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jumlah Truck"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">
                                    <TextView
                                        android:id="@+id/tv_output_jumlah_truck"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:gravity="center_vertical"
                                        android:padding="5dp"
                                        android:text="7000"
                                        android:background="@drawable/bg_border_green_all_5_round_white"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_weight="0.3"
                                        android:gravity="center"
                                        android:layout_height="wrap_content"
                                        android:text="unit"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!-- Nomor Kontainer -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Kontainer"/>
                        <TextView
                            android:id="@+id/tv_output_nomor_kontainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="12345678910111213"
                            android:background="@drawable/bg_border_green_all_5_round_white" />
                        <!-- Nama Kapal -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebutuhan Tambahan"/>
                        <TextView
                            android:id="@+id/tv_output_nama_kapal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Tidak ada"
                            android:background="@drawable/bg_border_green_all_5_round_white" />
                        <!-- Kebutuhan Tambahan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebutuhan Tambahan"/>
                        <TextView
                            android:id="@+id/tv_output_kebutuhan_tambahan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            android:text="Tidak ada"
                            android:background="@drawable/bg_border_green_all_5_round_white" />
                        <!-- Tanggal dan Waktu -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="2">
                            <!-- Tanggal -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:orientation="vertical"
                                android:layout_marginEnd="45dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tanggal"/>
                                <TextView
                                    android:id="@+id/tv_output_tanggal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="10/09/2019"
                                    android:background="@drawable/bg_border_green_all_5_round_white"/>
                            </LinearLayout>
                            <!-- Waktu -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:orientation="vertical"
                                android:layout_marginEnd="30dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Waktu"/>
                                <TextView
                                    android:id="@+id/tv_output_waktu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    android:padding="5dp"
                                    android:text="20:21"
                                    android:background="@drawable/bg_border_green_all_5_round_white"/>
                            </LinearLayout>
                        </LinearLayout>
                        <!-- Deskripsi Barang, Tarif, dan Jatuh Tempo Pembayaran -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <!-- Deskripsi Barang -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1.2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deskripsi Barang" />

                                <TextView
                                    android:id="@+id/tv_output_deskripsi_barang"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_border_green_all_5_round_white"
                                    android:minHeight="75dp"
                                    android:padding="5dp"
                                    android:text="@string/lorem_ipsum_5_words" />
                            </LinearLayout>
                            <!-- Tarif dan Jatuh Tempo Pembayaran -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="0.8"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tarif" />

                                    <TextView
                                        android:id="@+id/tv_output_tarif"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp. 10.000.000"
                                        android:textColor="@android:color/holo_green_dark" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Jatuh Tempo Pembayaran" />

                                    <TextView
                                        android:id="@+id/tv_output_jatuh_tempo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="22/12/2019"
                                        android:textColor="@android:color/holo_green_dark" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <!-- Nomer Pengurus dan Salin -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Nomor Pengurus: "/>
                            <TextView
                                android:id="@+id/tv_output_nomor_pengurus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="08122233444"/>
                            <TextView
                                android:id="@+id/tv_btn_salin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:text="Salin"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Tombol Mulai -->
                <Button
                    android:id="@+id/btn_mulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Mulai"/>
                <Button
                    android:id="@+id/btn_komisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:text="Komisi"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>