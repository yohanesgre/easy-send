<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_item_order">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/layout_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/output_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="19/12/2020 10:10"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/btn_lihat_detil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Detail"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="end"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato"
                        android:textSize="16sp"/>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/layout_header"
                    app:layout_constraintRight_toLeftOf="@id/btn_mulai"
                    app:layout_constraintLeft_toLeftOf="parent">
                    <TextView
                        android:id="@+id/output_origin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jl. Pasar Turi"
                        android:layout_marginVertical="5dp"
                        android:drawableLeft="@drawable/ic_location_origin_small"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato"
                        android:drawablePadding="10dp" />
                    <TextView
                        android:id="@+id/output_no_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jl. Pasar Turi"
                        android:layout_marginStart="25dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato"/>
                    <TextView
                        android:id="@+id/output_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        tools:text="Jl. Terusan Buahbatu"
                        android:drawableLeft="@drawable/ic_location_small"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lato"
                        android:drawablePadding="10dp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_mulai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="10dp"
                    android:text="MULAI"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>