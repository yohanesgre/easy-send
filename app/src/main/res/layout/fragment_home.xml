<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_easy_send_logo"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitXY"
                    android:tint="@color/bg_grey_100"/>
                <ImageView
                    android:layout_marginTop="100dp"
                    android:src="@drawable/ic_easy_send_logo"
                    android:layout_width="260dp"
                    android:layout_height="280dp"
                    android:scaleType="fitXY"
                    android:tint="@color/bg_grey_100"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <ImageView
                            android:id="@+id/iv_logo_easy_send"
                            android:layout_width="95dp"
                            android:layout_height="50dp"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_logo_easysend"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_logo_text_easy_send"
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_easy_send_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/iv_logo_easy_send"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_notif"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                            android:src="@drawable/ic_notif"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!-- Info Rating dan Point -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Rating"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Point"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <!-- Info Rating -->
                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:id="@+id/layout_rating_star"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_all_10_round_grey"
                            android:padding="10dp">

                            <include layout="@layout/item_rating_empty"
                                android:id="@+id/layout_rating_empty"/>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_rating"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:itemCount="5"
                                tools:listitem="@layout/item_rating"
                                tools:orientation="horizontal"
                                android:layout_gravity="center"/>
                        </androidx.coordinatorlayout.widget.CoordinatorLayout>

                        <androidx.coordinatorlayout.widget.CoordinatorLayout
                            android:id="@+id/layout_point_info"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_border_all_10_round_grey"
                            android:paddingHorizontal="10sp"
                            android:paddingVertical="5dp">

                            <TextView
                                android:id="@+id/output_point"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|right"
                                android:fontFamily="@font/roboto_bold"
                                android:gravity="right"
                                android:text="1000"
                                android:textColor="@color/colorPrimary"
                                android:textSize="24sp" />
                        </androidx.coordinatorlayout.widget.CoordinatorLayout>
                    </LinearLayout>
                    <!-- Info Driver -->
                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_border_all_10_round_grey"
                        android:clipToPadding="false">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/tv_lbl_edit_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:textSize="13sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_lbl_nama_driver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Driver"
                                android:textSize="20sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_output_nama_driver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sunarya Bulipsi Susanto"
                                android:textColor="@color/colorPrimary"
                                android:textSize="22sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_lbl_nama_driver" />

                            <TextView
                                android:id="@+id/tv_lbl_nopol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:text="No. Polisi"
                                android:textSize="20sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_output_nama_driver" />

                            <TextView
                                android:id="@+id/tv_output_nopol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="L 8789 PW"
                                android:textColor="@color/colorPrimary"
                                android:textSize="22sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_lbl_nopol" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.coordinatorlayout.widget.CoordinatorLayout>

                    <ImageView
                        android:id="@+id/btn_emergency"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_alert_small" />
                    <!-- Belum Ada Pesanan -->
                    <LinearLayout
                        android:id="@+id/layout_empty_pesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_empty_order"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_empty_order_2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Belum Ada Order Baru"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <!-- Informasi Pesanan -->
                    <LinearLayout
                        android:id="@+id/layout_pesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="25dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_output_no_pesanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:text="No Pesanan 9182"
                            android:textSize="24sp" />
                        <!-- Lokasi Pengambilan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Pengambilan" />

                        <TextView
                            android:id="@+id/tv_output_lokasi_pengambilan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_small"
                            android:drawableRight="@android:drawable/ic_menu_search"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                            android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                            android:text="Jl. Kali Jagal No. 101, Jakarta"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                            android:background="@color/underline_grey" />
                        <!-- Lokasi Pengiriman -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lokasi Pengiriman" />

                        <TextView
                            android:id="@+id/tv_output_lokasi_pengiriman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_small"
                            android:drawableRight="@android:drawable/ic_menu_search"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                            android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                            android:text="Jl. Soekarno No. 1, Surabaya"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                            android:background="@color/underline_grey" />
                        <!-- Rute Tambahan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rute Tambahan" />

                        <TextView
                            android:id="@+id/tv_output_rute_tambahan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_small"
                            android:drawableRight="@android:drawable/ic_menu_search"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                            android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                            android:text="Jl. Soekarno No. 1, Surabaya"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                            android:background="@color/underline_grey" />
                        <!-- Tipe Pengiriman -->
                        <RadioGroup
                            android:id="@+id/rg_tipe_pengiriman"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checkedButton="@id/rb_pengiriman_sekali"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_pengiriman_sekali"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sekali Jalan"
                                android:textSize="16sp" />

                            <RadioButton
                                android:id="@+id/rb_pengiriman_pp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:text="Pulang Pergi"
                                android:textSize="16sp" />
                        </RadioGroup>
                        <!-- Berat Volume Barang dan Jumlah Truck -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <!-- Berat Volume Barang -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Berat atau Volume Barang" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/tv_output_berat_volume_barang"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.6"
                                        android:gravity="center_vertical"
                                        android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                                        android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                                        android:text="7000"
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.4"
                                        android:gravity="center"
                                        android:text="Kilo Gram" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                                    android:background="@color/underline_grey" />
                            </LinearLayout>
                            <!-- Jumlah Truck -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jumlah Truck" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="5dp"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/tv_output_jumlah_truck"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.7"
                                        android:gravity="center_vertical"
                                        android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                                        android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                                        android:text="7000"
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.3"
                                        android:gravity="center"
                                        android:text="unit" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                                    android:background="@color/underline_grey" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- Jenis Truck -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis Truck" />

                        <TextView
                            android:id="@+id/tv_output_jenis_truck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                            android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                            android:text="1x20 Feet"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                            android:background="@color/underline_grey" />
                        <!-- Nomor Kontainer -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Kontainer" />

                        <TextView
                            android:id="@+id/tv_output_nomor_kontainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                            android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                            android:text="12345678910111213"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                            android:background="@color/underline_grey" />
                        <!-- Nama Kapal -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Kapal" />

                        <TextView
                            android:id="@+id/tv_output_nama_kapal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                            android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                            android:text="Malaka 75450"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                            android:background="@color/underline_grey" />
                        <!-- Kebutuhan Tambahan -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kebutuhan Tambahan" />

                        <TextView
                            android:id="@+id/tv_output_kebutuhan_tambahan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                            android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                            android:text="Tidak ada"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                            android:background="@color/underline_grey" />
                        <!-- Tanggal dan Waktu -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <!-- Tanggal -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="45dp"
                                android:layout_weight="1.2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tanggal" />

                                <TextView
                                    android:id="@+id/tv_output_tanggal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                                    android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                                    android:text="10/09/2019"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                                    android:background="@color/underline_grey" />
                            </LinearLayout>
                            <!-- Waktu -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="30dp"
                                android:layout_weight="0.8"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Waktu" />

                                <TextView
                                    android:id="@+id/tv_output_waktu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                                    android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                                    android:text="20:21"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginBottom="@dimen/textview_boxed_bottom_margin"
                                    android:background="@color/underline_grey" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- Deskripsi Barang, Tarif, dan Jatuh Tempo Pembayaran -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <!-- Deskripsi Barang -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1.2"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Deskripsi Barang" />

                                <TextView
                                    android:id="@+id/tv_output_deskripsi_barang"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_border_grey_all_5_round_white"
                                    android:minHeight="75dp"
                                    android:paddingHorizontal="@dimen/textview_boxed_horizontal_padding"
                                    android:paddingVertical="@dimen/textview_boxed_vertical_padding"
                                    android:text="@string/lorem_ipsum_5_words"
                                    android:textColor="@android:color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- Nomer Pengurus dan Salin -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="Nomor Pengurus: " />

                            <TextView
                                android:id="@+id/tv_output_nomor_pengurus"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.7"
                                android:text="08122233444" />

                            <TextView
                                android:id="@+id/tv_btn_salin"
