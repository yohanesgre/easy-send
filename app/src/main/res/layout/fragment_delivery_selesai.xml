<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/ic_man_2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="50dp"/>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:background="@drawable/bg_border_green_all_10_round_white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/tv_lbl_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:textSize="12sp"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/tv_lbl_nama_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Driver"
                        android:textSize="20sp" />
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/tv_lbl_nama_driver"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/tv_output_nama_driver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunarya Bulipsi Susanto"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp"/>

                    <TextView
                        android:id="@+id/tv_lbl_nopol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="No. Polisi"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_output_nama_driver"
                        android:textSize="20sp"/>
                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/tv_lbl_nopol"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/tv_output_nopol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="L 8789 PW"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layout_rating_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_green_all_10_round_white"
                android:padding="10dp"
               android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:gravity="center">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_rating_delivery_selesai"
                    tools:orientation="horizontal"
                    tools:itemCount="5"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Terima kasih telah menyelesaikan tugas Anda, kumpulkan terus poin Anda dan dapatkan bonus dari EasySend"/>
            <Button
                android:id="@+id/btn_oke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="OKE"
                android:backgroundTint="@color/white"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>